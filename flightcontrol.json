{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production-env",
      "name": "Production",
      "region": "eu-west-2",
      "source": {
        "branch": "main",
        "pr": false,
        "trigger": "push"
      },
      "services": [
        {
          "ci": {
            "type": "ec2",
            "storageIops": 3000,
            "storageType": "gp3",
            "instanceStorage": 30,
            "storageThroughput": 125
          },
          "id": "lambda",
          "name": "Lambda",
          "type": "lambda",
          "basePath": ".",
          "envVariables": {},
          "includeEnvVariablesInBuild": true,
          "injectEnvVariablesInDockerfile": true
        },
        {
          "ci": {
            "type": "ec2",
            "storageIops": 3000,
            "storageType": "gp3",
            "instanceStorage": 30,
            "storageThroughput": 125
          },
          "id": "static-site",
          "name": "Static Site",
          "type": "static",
          "basePath": ".",
          "buildType": "nixpacks",
          "envVariables": {},
          "singlePageApp": false,
          "outputDirectory": "public",
          "versionHistoryCount": 10
        }
      ]
    }
  ]
}
