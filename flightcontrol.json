{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production-1",
      "name": "Production",
      "region": "eu-west-1",
      "source": {
        "branch": "main",
        "pr": false,
        "trigger": "push"
      },
      "services": [
        {
          "id": "nextjs-app",
          "name": "Next.js App",
          "buildType": "nixpacks",
          "cpu": 0.5,
          "memory": 1,
          "containerInsights": false,
          "minInstances": 1,
          "maxInstances": 1,
          "versionHistoryCount": 10,
          "basePath": ".",
          "dockerfilePath": "Dockerfile",
          "dockerContext": ".",
          "envVariables": {},
          "autoscaling": {
            "cpuThreshold": 70,
            "memoryThreshold": 70,
            "cooldownTimerSecs": 300
          },
          "includeEnvVariablesInBuild": true,
          "type": "worker"
        },
        {
          "id": "build-system",
          "name": "Build System Script",
          "type": "fargate-scheduler",
          "buildType": "nixpacks",
          "cpu": 0.5,
          "memory": 1,
          "jobs": {
            "upload-script": {
              "cpu": 0.5,
              "memory": 1,
              "schedule": "manual",
              "startCommand": "echo 'test'"
            }
          }
        },
      ]
    },
    {
      "id": "preview-1",
      "name": "Preview",
      "region": "eu-west-1",
      "source": {
        "pr": true,
        "trigger": "push",
        "filter": {
          "labels": ["deploy-preview"]
        }
      },
      "services": [
        {
          "id": "redis",
          "name": "Redis",
          "type": "elasticache",
          "engine": "redis",
          "engineVersion": "7.0",
          "instanceSize": "cache.t4g.small",
          "connectionStringEnvVarName": "REDIS_URL"
        }
      ]
    }
  ]
}
