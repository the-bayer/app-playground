{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "envVariables": {},
  "environments": [
    {
      "id": "staging",
      "name": "staging",
      "region": "us-east-1",
      "source": { "pr": false, "branch": "main", "trigger": "push" },
      "services": [
        {
          "id": "jobanni-db-staging",
          "name": "jobanni-db-staging",
          "port": 5432,
          "type": "rds",
          "engine": "postgres",
          "private": false,
          "storage": 20,
          "maxStorage": 100,
          "instanceSize": "db.m6g.large",
          "engineVersion": "16",
          "deletionProtection": false,
          "applyChangesImmediately": true,
          "autoUpgradeMinorVersions": true,
          "connectionStringEnvVarName": "DATABASE_URL"
        },
        {
          "id": "jobanni-redis-staging",
          "name": "jobanni-redis-staging",
          "port": 6379,
          "type": "elasticache",
          "engine": "redis",
          "clusterMode": false,
          "instanceSize": "cache.m5.large",
          "engineVersion": "7.1",
          "evictionPolicy": "volatile-lru",
          "encryptionAtRest": true,
          "numberOfReplicas": 1,
          "applyChangesImmediately": false,
          "autoMinorVersionUpgrade": true,
          "connectionStringEnvVarName": "REDIS_URL"
        },
        {
          "ci": {
            "type": "ec2",
            "storageIops": 3000,
            "storageType": "gp3",
            "instanceStorage": 30,
            "storageThroughput": 125
          },
          "id": "fetcher-staging",
          "cpu": 1,
          "gpu": 0,
          "name": "fetcher-staging",
          "type": "worker",
          "memory": 2,
          "target": { "type": "fargate" },
          "basePath": ".",
          "buildType": "docker",
          "dependsOn": [
            "jobanni-db-staging",
            "jobanni-redis-staging"
          ],
          "autoscaling": {
            "cpuThreshold": 70,
            "memoryThreshold": 70,
            "cooldownTimerSecs": 300
          },
          "envVariables": {},
          "maxInstances": 1,
          "minInstances": 1,
          "dockerContext": ".",
          "dockerfilePath": "Dockerfile",
          "containerInsights": false,
          "versionHistoryCount": 10,
          "includeEnvVariablesInBuild": true,
          "injectEnvVariablesInDockerfile": true
        }
      ],
      "envVariables": {
        "REDIS_URL": {
          "fromService": {
            "id": "jobanni-redis-staging",
            "value": "connectionString"
          }
        },
        "DATABASE_URL": {
          "fromService": {
            "id": "jobanni-db-staging",
            "value": "dbConnectionString"
          }
        }
      }
    }
  ]
}
